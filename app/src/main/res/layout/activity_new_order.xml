<?xml version="1.0" encoding="utf-8"?>
<!-- activity_new_order.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Container for the image with black border -->
    <FrameLayout
        android:id="@+id/image_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/order_product_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
    </FrameLayout>

    <!-- Text views with white boxes and black outlines -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_container"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/product_details_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Product details : "
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:outlineSpotShadowColor="@android:color/black"
            android:outlineAmbientShadowColor="@android:color/black"
            android:outlineProvider="background"/>

        <TextView
            android:id="@+id/order_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:outlineSpotShadowColor="@android:color/black"
            android:outlineAmbientShadowColor="@android:color/black"
            android:outlineProvider="background"/>

        <TextView
            android:id="@+id/order_product_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:outlineSpotShadowColor="@android:color/black"
            android:outlineAmbientShadowColor="@android:color/black"
            android:outlineProvider="background"/>

        <TextView
            android:id="@+id/order_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:background="@android:color/white"
            android:textColor="@android:color/black"
            android:padding="8dp"
            android:outlineSpotShadowColor="@android:color/black"
            android:outlineAmbientShadowColor="@android:color/black"
            android:outlineProvider="background"/>
        <Button
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:layout_below="@id/order_product_price"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />
    </LinearLayout>

    <!-- Add a small button called "Order" -->

</RelativeLayout>
